{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "error"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "",
      "!/.next",
      "!/dist",
      "!/.turbo",
      "!/dev-dist",
      "!/.zed",
      "!/.vscode",
      "!/routeTree.gen.ts",
      "!/src-tauri",
      "!/.nuxt",
      "!bts.jsonc",
      "!/.expo",
      "!/.wrangler",
      "!/.source",
      "!/apps/web/src/components/ui/",
      "!/apps/web/src/hooks/use-mobile.ts",
      "!/apps/server/src/lib/auth.ts",
      "!/apps/web/src/components/mode-toggle.tsx",
      "!**/apps/web/src/index.css"
    ]
  },
  "extends": ["ultracite"]
}
