{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch --env-file=.env src/index.ts",
    "start": "bun run --env-file=.env src/index.ts",
    "build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --platform=node",
    "lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed-super-admin.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.940.0",
    "@aws-sdk/s3-request-presigner": "3.940.0",
    "@hono/node-server": "1.13.7",
    "@hono/swagger-ui": "0.4.1",
    "@hono/zod-openapi": "1.1.5",
    "@neondatabase/serverless": "1.0.2",
    "@t3-oss/env-core": "0.13.8",
    "bcryptjs": "3.0.3",
    "better-auth": "1.4.3",
    "drizzle-orm": "0.44.7",
    "hono": "4.6.14",
    "hono-pino": "0.10.3",
    "nodemailer": "7.0.11",
    "pino": "10.1.0",
    "pino-pretty": "13.1.2",
    "ws": "8.18.3",
    "zod": "4.1.13",
    "zod-validation-error": "5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bcryptjs": "3.0.0",
    "@types/nodemailer": "7.0.4",
    "@types/ws": "8.18.1",
    "bun-types": "1.3.3",
    "dotenv": "17.2.3",
    "drizzle-kit": "0.31.7",
    "esbuild": "^0.27.1",
    "tsx": "4.19.2",
    "typescript": "5.6.3"
  }
}